<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QRScanner.Views.ImageCabinetView">
    <VerticalStackLayout Margin="5">
        <Image x:Name="CabinetImage" Margin="5" Unfocused="OnUnfocused"/>
        <Entry x:Name="UriEntry" Margin="5" Unfocused="OnUnfocused"/>
        <Entry x:Name="DescEntry" Margin="5" Unfocused="OnUnfocused"/>
        <Button Text="Удалить" Clicked="DeleteClicked"/>
    </VerticalStackLayout>
</ContentView>