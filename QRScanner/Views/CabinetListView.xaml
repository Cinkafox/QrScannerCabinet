<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QRScanner.Views.CabinetListView">
    <VerticalStackLayout Margin="5">
        <VerticalStackLayout x:Name="MainLayout">
            <Label x:Name="Message" />
            <Button Text="Добавить комнату" Clicked="AddButtonClicked" />
            <ScrollView Margin="0,15,0,0">
                <VerticalStackLayout x:Name="CabinetStack" />
            </ScrollView>
        </VerticalStackLayout>
        <ScrollView x:Name="AdditionView" />
    </VerticalStackLayout>
</ContentView>