<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QRScanner.Views.AuthView">
    <VerticalStackLayout Margin="5" x:Name="AuthLayout" IsEnabled="False">
        <HorizontalStackLayout>
            <Label Text="Логин:" VerticalTextAlignment="Center" />
            <Entry x:Name="LoginEntry" VerticalTextAlignment="Center" HorizontalOptions="Fill" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Пароль:" VerticalTextAlignment="Center" />
            <Entry x:Name="PasswordEntry" IsPassword="True" VerticalTextAlignment="Center" HorizontalOptions="Fill" />
        </HorizontalStackLayout>
        <Label x:Name="Message" VerticalTextAlignment="Center" />
        <Button Text="Авторизация" Clicked="AuthClicked" />
    </VerticalStackLayout>
</ContentView>