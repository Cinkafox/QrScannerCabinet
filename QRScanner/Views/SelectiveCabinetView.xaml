<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QRScanner.Views.SelectiveCabinetView">
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Label Text="#" VerticalTextAlignment="Center" FontSize="20" />
            <Label x:Name="NumberLabel" VerticalTextAlignment="Center" FontSize="20" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Название:" Margin="5,0,0,0" VerticalTextAlignment="Center" FontSize="20" />
            <Label x:Name="NameLabel" VerticalTextAlignment="Center" FontSize="20" />
        </HorizontalStackLayout>
        <FlexLayout Direction="Row" JustifyContent="SpaceAround" AlignContent="Stretch">
            <Button Text="Тык" Margin="5" FontSize="20" Clicked="ActionButtonClicked" x:Name="ActionButton" />
            <Button Text="-" Margin="5" FontSize="20" Clicked="RemoveButtonClicked" />
        </FlexLayout>
    </VerticalStackLayout>
</ContentView>