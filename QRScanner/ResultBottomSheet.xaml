<?xml version="1.0" encoding="utf-8"?>
<the49:BottomSheet xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                   xmlns:the49="https://schemas.the49.com/dotnet/2023/maui"
                   x:Class="QRScanner.ResultBottomSheet"
                   Padding="16, 32" BackgroundColor="#222222">
    <the49:BottomSheet.Detents>
        <the49:FullscreenDetent />
    </the49:BottomSheet.Detents>
    
    <Grid RowDefinitions="Auto,*">
        <StackLayout Grid.Row="0">
            <Label x:Name="RoomName" FontSize="24" HorizontalTextAlignment="Center"/>
            <Label x:Name="RoomId" FontSize="24" HorizontalTextAlignment="Center"/>
        </StackLayout>
        <ScrollView Grid.Row="1">
            <VerticalStackLayout>
                <Label x:Name="RoomDesc"/>
                <VerticalStackLayout x:Name="Images"></VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</the49:BottomSheet>